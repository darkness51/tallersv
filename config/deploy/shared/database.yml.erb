default: &default
  adapter: postgresql
  pool: 5
  timeout: 5000


<%= fetch(:rails_env) %>:
  <<: *default
  encoding: utf8
  reconnect: false
  database: <%= "#{fetch(:application)}_#{fetch(:rails_env)}" %>
  pool: 5
  username: <%= "#{fetch(:application)}_#{fetch(:rails_env)}" %>
  password: <%= "#{fetch(:database_password)}" %>
  host: 127.0.0.1
  port: 5432