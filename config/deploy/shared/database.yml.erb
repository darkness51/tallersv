# SQLite version 3.x
#   gem install sqlite3
#
#   Ensure the SQLite 3 gem is defined in your Gemfile
#   gem 'sqlite3'
#
default: &default
  adapter: postgresql
  pool: 5
  timeout: 5000


<%= fetch(:rails_env) %>:
  <<: *default
  encoding: utf8
  reconnect: false
  database: <%= "#{fetch(:application)}_#{fetch(:rails_env)}" %>
  pool: 5
  username: <%= "#{fetch(:application)}_#{fetch(:rails_env)}" %>
  password: <%= "#{fetch(:database_password)}" %>
  host:
  port: 5432